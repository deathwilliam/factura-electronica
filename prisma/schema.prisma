// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  razonSocial String?
  nit       String? // Número de Identificación Tributaria
  nrc       String? // Número de Registro de Contribuyente
  giro      String?
  codActividad String? // Código de actividad económica MH (ej: "62010")
  direccion String?
  departamento String? // Código de departamento (01-14)
  municipio String?    // Código de municipio
  telefono  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones principales
  invoices           Invoice[]
  clients            Client[]

  // Nuevos módulos
  products           Product[]
  productCategories  ProductCategory[]
  quotations         Quotation[]
  payments           Payment[]
  expenses           Expense[]
  expenseCategories  ExpenseCategory[]
  dteInvalidations   DTEInvalidation[]
  contingencyBatches ContingencyBatch[]
  createdRoles       Role[]           @relation("CreatedRoles")
  userRoles          UserRole[]
  notifications      Notification[]
  branches           Branch[]
  companySettings    CompanySettings?
}

model Client {
  id           String    @id @default(uuid())
  name         String
  email        String
  address      String?
  departamento String?   // Código de departamento (01-14)
  municipio    String?   // Código de municipio
  phone        String?
  razonSocial  String?
  nit          String?
  nrc          String?
  giro         String?
  codActividad String?   // Código de actividad económica (para CCF)
  dui          String?   // Documento Único de Identidad (Personas Naturales)
  tipo         String    @default("NATURAL") // NATURAL, JURIDICO
  userId       String
  user         User      @relation(fields: [userId], references: [id])
  invoices     Invoice[]
  quotations   Quotation[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Invoice {
  id                 String           @id @default(uuid())
  clientId           String
  userId             String
  amount             Decimal
  status             String           @default("PENDING") // PENDING, PAID, OVERDUE, PARTIAL
  type               String           @default("CONSUMIDOR_FINAL") // CONSUMIDOR_FINAL, CREDITO_FISCAL
  dteJson            Json?            // JSON generado
  dteSigned          Json?            // JSON firmado
  receptionSeal      String?          // Sello de Recepción
  generationCode     String?          // Código de Generación (UUID del DTE)
  controlNumber      String?          // Número de Control (DTE-00-...)
  transmissionStatus String           @default("PENDING") // PENDING, SENT, REJECTED, CONTINGENCY
  contingencyBatchId String?          // Lote de contingencia (si aplica)
  date               DateTime         @default(now())
  dueDate            DateTime
  client             Client           @relation(fields: [clientId], references: [id])
  user               User             @relation(fields: [userId], references: [id])
  items              InvoiceItem[]
  payments           Payment[]
  invalidation       DTEInvalidation?
  creditNotes        CreditNote[]
  debitNotes         DebitNote[]
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String
  description String
  quantity    Int
  price       Decimal
  productId   String?
  product     Product?  @relation(fields: [productId], references: [id])
  invoice     Invoice   @relation(fields: [invoiceId], references: [id])
}

// ============================================
// MÓDULO: Notas de Crédito y Débito
// ============================================

model CreditNote {
  id                 String           @id @default(uuid())
  invoiceId          String           // Factura relacionada
  invoice            Invoice          @relation(fields: [invoiceId], references: [id])
  userId             String
  clientId           String
  amount             Decimal          // Monto de la nota de crédito
  reason             String           // Motivo (devolución, descuento, error, etc.)
  reasonCode         Int              // 1=Devolución, 2=Descuento, 3=Ajuste, 4=Otros
  type               String           @default("CONSUMIDOR_FINAL") // Mismo tipo que factura original
  dteJson            Json?
  dteSigned          Json?
  receptionSeal      String?
  generationCode     String?
  controlNumber      String?
  transmissionStatus String           @default("PENDING")
  date               DateTime         @default(now())
  items              CreditNoteItem[]
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
}

model CreditNoteItem {
  id            String     @id @default(uuid())
  creditNoteId  String
  creditNote    CreditNote @relation(fields: [creditNoteId], references: [id], onDelete: Cascade)
  description   String
  quantity      Int
  price         Decimal
}

model DebitNote {
  id                 String          @id @default(uuid())
  invoiceId          String          // Factura relacionada
  invoice            Invoice         @relation(fields: [invoiceId], references: [id])
  userId             String
  clientId           String
  amount             Decimal         // Monto de la nota de débito
  reason             String          // Motivo (intereses, cargo adicional, etc.)
  reasonCode         Int             // 1=Intereses, 2=Gastos administrativos, 3=Otros
  type               String          @default("CONSUMIDOR_FINAL")
  dteJson            Json?
  dteSigned          Json?
  receptionSeal      String?
  generationCode     String?
  controlNumber      String?
  transmissionStatus String          @default("PENDING")
  date               DateTime        @default(now())
  items              DebitNoteItem[]
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
}

model DebitNoteItem {
  id          String    @id @default(uuid())
  debitNoteId String
  debitNote   DebitNote @relation(fields: [debitNoteId], references: [id], onDelete: Cascade)
  description String
  quantity    Int
  price       Decimal
}

// ============================================
// MÓDULO: Factura Sujeto Excluido (FSE - Tipo 14)
// Para compras a proveedores sin obligaciones tributarias
// ============================================

model ExcludedSubjectInvoice {
  id                 String                      @id @default(uuid())
  userId             String
  // Datos del sujeto excluido (proveedor)
  subjectName        String                      // Nombre del sujeto
  subjectDocType     String                      // Tipo doc: DUI, PASAPORTE, CARNET_RESIDENTE
  subjectDocNumber   String                      // Número de documento
  subjectAddress     String?
  subjectDepartamento String?
  subjectMunicipio   String?
  subjectPhone       String?
  subjectEmail       String?
  subjectActivity    String?                     // Actividad o giro
  // Montos
  amount             Decimal                     // Total compra
  // DTE
  dteJson            Json?
  dteSigned          Json?
  receptionSeal      String?
  generationCode     String?
  controlNumber      String?
  transmissionStatus String                      @default("PENDING")
  date               DateTime                    @default(now())
  items              ExcludedSubjectItem[]
  createdAt          DateTime                    @default(now())
  updatedAt          DateTime                    @updatedAt
}

model ExcludedSubjectItem {
  id          String                 @id @default(uuid())
  fseId       String
  fse         ExcludedSubjectInvoice @relation(fields: [fseId], references: [id], onDelete: Cascade)
  description String
  quantity    Int
  price       Decimal
  tipoItem    Int                    @default(1) // 1=Bienes, 2=Servicios
}

// ============================================
// MÓDULO: Comprobante de Retención (Tipo 07)
// Para retenciones IVA y Renta a proveedores
// ============================================

model WithholdingReceipt {
  id                 String                  @id @default(uuid())
  userId             String
  // Proveedor retenido
  supplierName       String
  supplierNit        String
  supplierNrc        String?
  supplierAddress    String?
  supplierDepartamento String?
  supplierMunicipio  String?
  supplierPhone      String?
  supplierEmail      String?
  supplierCodActividad String?
  // Documento relacionado (factura del proveedor)
  relatedDocType     String                  // 03=CCF, 01=Factura
  relatedDocNumber   String                  // Número de control del doc original
  relatedDocDate     DateTime                // Fecha del documento original
  // Montos
  totalSubject       Decimal                 // Monto sujeto a retención
  ivaWithheld        Decimal                 @default(0) // IVA retenido (1%)
  rentaWithheld      Decimal                 @default(0) // Renta retenida (10%)
  totalWithheld      Decimal                 // Total retenido
  // DTE
  dteJson            Json?
  dteSigned          Json?
  receptionSeal      String?
  generationCode     String?
  controlNumber      String?
  transmissionStatus String                  @default("PENDING")
  date               DateTime                @default(now())
  items              WithholdingItem[]
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt
}

model WithholdingItem {
  id                String             @id @default(uuid())
  withholdingId     String
  withholding       WithholdingReceipt @relation(fields: [withholdingId], references: [id], onDelete: Cascade)
  description       String             // Descripción del concepto
  withholdingType   String             // IVA_1, RENTA_10, RENTA_5
  subjectAmount     Decimal            // Monto sujeto
  withheldAmount    Decimal            // Monto retenido
}

// ============================================
// MÓDULO: Factura de Exportación (Tipo 11)
// Para ventas al exterior
// ============================================

model ExportInvoice {
  id                 String              @id @default(uuid())
  userId             String
  // Cliente extranjero
  clientName         String
  clientCountry      String              // Código ISO país
  clientCountryName  String              // Nombre del país
  clientDocNumber    String?             // Documento de identificación
  clientAddress      String?
  clientPhone        String?
  clientEmail        String?
  // Exportación
  exportType         String              @default("DEFINITIVE") // DEFINITIVE, TEMPORARY
  incoterm           String?             // FOB, CIF, EXW, etc.
  portOfExit         String?             // Puerto o frontera de salida
  destinationCountry String              // País destino
  // Montos (siempre exentos de IVA)
  amount             Decimal
  // DTE
  dteJson            Json?
  dteSigned          Json?
  receptionSeal      String?
  generationCode     String?
  controlNumber      String?
  transmissionStatus String              @default("PENDING")
  date               DateTime            @default(now())
  items              ExportInvoiceItem[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model ExportInvoiceItem {
  id          String        @id @default(uuid())
  exportId    String
  export      ExportInvoice @relation(fields: [exportId], references: [id], onDelete: Cascade)
  description String
  quantity    Int
  price       Decimal
  tipoItem    Int           @default(1) // 1=Bienes, 2=Servicios
}

// ============================================
// MÓDULO: Nota de Remisión (Tipo 04)
// Para traslado de mercadería sin transferencia de propiedad
// ============================================

model ShippingNote {
  id                 String             @id @default(uuid())
  userId             String
  // Destinatario
  recipientName      String
  recipientNit       String?
  recipientNrc       String?
  recipientAddress   String
  recipientDepartamento String?
  recipientMunicipio String?
  recipientPhone     String?
  // Transporte
  driverName         String?            // Nombre del motorista
  driverDui          String?            // DUI del motorista
  vehiclePlate       String?            // Placa del vehículo
  transportReason    String             // Motivo del traslado
  // DTE
  dteJson            Json?
  dteSigned          Json?
  receptionSeal      String?
  generationCode     String?
  controlNumber      String?
  transmissionStatus String             @default("PENDING")
  date               DateTime           @default(now())
  items              ShippingNoteItem[]
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
}

model ShippingNoteItem {
  id             String       @id @default(uuid())
  shippingNoteId String
  shippingNote   ShippingNote @relation(fields: [shippingNoteId], references: [id], onDelete: Cascade)
  description    String
  quantity       Int
  unitValue      Decimal      // Valor unitario referencial
  tipoItem       Int          @default(1)
}

// ============================================
// MÓDULO: Comprobante de Liquidación (Tipo 08)
// Para liquidación de operaciones con terceros
// ============================================

model SettlementReceipt {
  id                 String               @id @default(uuid())
  userId             String
  // Tercero/Proveedor
  providerName       String
  providerNit        String
  providerNrc        String?
  providerAddress    String?
  providerDepartamento String?
  providerMunicipio  String?
  providerPhone      String?
  providerEmail      String?
  // Período de liquidación
  periodStart        DateTime
  periodEnd          DateTime
  // Montos
  grossAmount        Decimal              // Monto bruto
  deductions         Decimal              @default(0) // Deducciones
  commissions        Decimal              @default(0) // Comisiones
  netAmount          Decimal              // Monto neto a pagar
  // DTE
  dteJson            Json?
  dteSigned          Json?
  receptionSeal      String?
  generationCode     String?
  controlNumber      String?
  transmissionStatus String               @default("PENDING")
  date               DateTime             @default(now())
  items              SettlementItem[]
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
}

model SettlementItem {
  id           String            @id @default(uuid())
  settlementId String
  settlement   SettlementReceipt @relation(fields: [settlementId], references: [id], onDelete: Cascade)
  description  String
  quantity     Int
  unitPrice    Decimal
  amount       Decimal
}

// ============================================
// MÓDULO: Documento Contable de Liquidación (Tipo 09)
// Documento contable asociado a liquidaciones
// ============================================

model AccountingSettlement {
  id                 String                   @id @default(uuid())
  userId             String
  // Referencia a liquidación original
  settlementId       String?                  // Puede estar vinculado a un SettlementReceipt
  // Emisor original del documento
  originalEmitterNit String
  originalEmitterName String
  // Conceptos
  concept            String                   // Concepto del documento contable
  // Montos
  amount             Decimal
  taxAmount          Decimal                  @default(0)
  totalAmount        Decimal
  // DTE
  dteJson            Json?
  dteSigned          Json?
  receptionSeal      String?
  generationCode     String?
  controlNumber      String?
  transmissionStatus String                   @default("PENDING")
  date               DateTime                 @default(now())
  items              AccountingSettlementItem[]
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
}

model AccountingSettlementItem {
  id                     String               @id @default(uuid())
  accountingSettlementId String
  accountingSettlement   AccountingSettlement @relation(fields: [accountingSettlementId], references: [id], onDelete: Cascade)
  description            String
  amount                 Decimal
}

// ============================================
// MÓDULO: Comprobante de Donación (Tipo 15)
// Para donaciones a entidades sin fines de lucro
// ============================================

model DonationReceipt {
  id                 String             @id @default(uuid())
  userId             String
  // Donatario (quien recibe la donación)
  donorName          String             // Nombre del donante
  donorNit           String?
  donorDui           String?
  donorAddress       String?
  donorDepartamento  String?
  donorMunicipio     String?
  donorPhone         String?
  donorEmail         String?
  // Donatario autorizado (entidad que recibe)
  recipientName      String             // Nombre de la entidad
  recipientNit       String             // NIT de la entidad
  authorizationNumber String?           // Número de autorización MH
  // Tipo de donación
  donationType       String             @default("CASH") // CASH, GOODS, SERVICES
  // Montos
  amount             Decimal
  // DTE
  dteJson            Json?
  dteSigned          Json?
  receptionSeal      String?
  generationCode     String?
  controlNumber      String?
  transmissionStatus String             @default("PENDING")
  date               DateTime           @default(now())
  items              DonationItem[]
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
}

model DonationItem {
  id          String          @id @default(uuid())
  donationId  String
  donation    DonationReceipt @relation(fields: [donationId], references: [id], onDelete: Cascade)
  description String
  quantity    Int
  value       Decimal         // Valor estimado
  tipoItem    Int             @default(1) // 1=Bien, 2=Servicio, 3=Efectivo
}

// ============================================
// MÓDULO: Productos y Servicios
// ============================================

model ProductCategory {
  id          String    @id @default(uuid())
  name        String
  description String?
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id           String           @id @default(uuid())
  code         String           // Código interno del producto
  name         String
  description  String?
  price        Decimal
  cost         Decimal?         // Costo (para cálculo de margen)
  type         String           @default("SERVICE") // PRODUCT, SERVICE
  unit         String           @default("UNIDAD") // UNIDAD, HORA, DIA, MES, etc.
  taxable      Boolean          @default(true) // Gravado con IVA
  active       Boolean          @default(true)
  categoryId   String?
  category     ProductCategory? @relation(fields: [categoryId], references: [id])
  userId       String
  user         User             @relation(fields: [userId], references: [id])
  invoiceItems InvoiceItem[]
  quotationItems QuotationItem[]
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@unique([userId, code])
}

// ============================================
// MÓDULO: Cotizaciones / Proformas
// ============================================

model Quotation {
  id            String          @id @default(uuid())
  number        Int             // Número secuencial de cotización
  clientId      String
  client        Client          @relation(fields: [clientId], references: [id])
  userId        String
  user          User            @relation(fields: [userId], references: [id])
  status        String          @default("DRAFT") // DRAFT, SENT, ACCEPTED, REJECTED, EXPIRED, INVOICED
  validUntil    DateTime        // Fecha de validez
  notes         String?         // Notas o condiciones
  discount      Decimal         @default(0) // Descuento global
  subtotal      Decimal
  tax           Decimal         // IVA
  total         Decimal
  invoiceId     String?         // Factura generada (si se convirtió)
  items         QuotationItem[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model QuotationItem {
  id          String    @id @default(uuid())
  quotationId String
  quotation   Quotation @relation(fields: [quotationId], references: [id], onDelete: Cascade)
  productId   String?
  product     Product?  @relation(fields: [productId], references: [id])
  description String
  quantity    Int
  price       Decimal
  discount    Decimal   @default(0) // Descuento por item
}

// ============================================
// MÓDULO: Pagos y Recibos
// ============================================

model Payment {
  id            String   @id @default(uuid())
  invoiceId     String
  invoice       Invoice  @relation(fields: [invoiceId], references: [id])
  amount        Decimal
  method        String   @default("CASH") // CASH, TRANSFER, CARD, CHECK, OTHER
  reference     String?  // Número de referencia/cheque/transacción
  notes         String?
  paymentDate   DateTime @default(now())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  createdAt     DateTime @default(now())
}

// ============================================
// MÓDULO: Gastos
// ============================================

model ExpenseCategory {
  id          String    @id @default(uuid())
  name        String
  description String?
  color       String?   // Color para visualización
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  expenses    Expense[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Expense {
  id           String           @id @default(uuid())
  description  String
  amount       Decimal
  date         DateTime         @default(now())
  categoryId   String?
  category     ExpenseCategory? @relation(fields: [categoryId], references: [id])
  vendor       String?          // Proveedor
  reference    String?          // Número de factura/recibo
  receipt      String?          // URL del comprobante (imagen)
  deductible   Boolean          @default(true) // Deducible de impuestos
  userId       String
  user         User             @relation(fields: [userId], references: [id])
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

// ============================================
// MÓDULO: Anulación de DTEs (Invalidación)
// ============================================

model DTEInvalidation {
  id                String   @id @default(uuid())
  invoiceId         String   @unique
  invoice           Invoice  @relation(fields: [invoiceId], references: [id])
  reason            String   // Motivo de anulación
  reasonCode        Int      // Código MH: 1=Cancelación, 2=Error facturación, 3=Devolución
  invalidationJson  Json?    // JSON de invalidación generado
  invalidationSigned Json?   // JSON firmado
  receptionSeal     String?  // Sello de recepción MH
  status            String   @default("PENDING") // PENDING, SENT, ACCEPTED, REJECTED
  requestedAt       DateTime @default(now())
  processedAt       DateTime?
  userId            String
  user              User     @relation(fields: [userId], references: [id])
}

// ============================================
// MÓDULO: Contingencia DTE
// ============================================

model ContingencyBatch {
  id               String    @id @default(uuid())
  startDate        DateTime  // Inicio del período de contingencia
  endDate          DateTime? // Fin del período
  reason           String    // Motivo de contingencia
  reasonCode       Int       // Código MH: 1=Sin internet, 2=MH no disponible, etc.
  status           String    @default("OPEN") // OPEN, CLOSED, TRANSMITTED
  transmissionDate DateTime? // Fecha de transmisión del lote
  receptionSeal    String?   // Sello de recepción del lote
  invoiceCount     Int       @default(0) // Número de facturas en el lote
  userId           String
  user             User      @relation(fields: [userId], references: [id])
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

// ============================================
// MÓDULO: Roles y Permisos
// ============================================

model Role {
  id          String       @id @default(uuid())
  name        String       // ADMIN, ACCOUNTANT, SALES, VIEWER
  description String?
  isSystem    Boolean      @default(false) // Roles del sistema no se pueden eliminar
  userId      String?      // null = rol del sistema
  user        User?        @relation("CreatedRoles", fields: [userId], references: [id])
  permissions RolePermission[]
  userRoles   UserRole[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Permission {
  id          String           @id @default(uuid())
  code        String           @unique // invoices.create, invoices.view, etc.
  name        String
  description String?
  module      String           // invoices, clients, products, etc.
  roles       RolePermission[]
}

model RolePermission {
  id           String     @id @default(uuid())
  roleId       String
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  assignedBy String? // Quién asignó el rol
  assignedAt DateTime @default(now())

  @@unique([userId, roleId])
}

// ============================================
// MÓDULO: Notificaciones
// ============================================

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // INVOICE_DUE, PAYMENT_RECEIVED, DTE_ERROR, SYSTEM, etc.
  title     String
  message   String
  link      String?  // URL para navegar
  read      Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())
}

// ============================================
// MÓDULO: Configuración Avanzada
// ============================================

model Branch {
  id            String   @id @default(uuid())
  name          String
  code          String   // Código interno de establecimiento (4 dígitos)
  codEstableMH  String?  // Código asignado por MH después del registro
  posCode       String   // Código interno de punto de venta (3 dígitos)
  codPuntoVentaMH String? // Código POS asignado por MH
  tipoEstablecimiento String @default("01") // 01=Sucursal, 02=Casa Matriz, etc.
  address       String
  departamento  String?  // Código de departamento (01-14)
  municipio     String?  // Código de municipio
  phone         String?
  isMain        Boolean  @default(false)
  active        Boolean  @default(true)
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, code])
}

model CompanySettings {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])
  logo            String?  // URL del logo
  invoicePrefix   String   @default("FAC") // Prefijo para facturas
  quotationPrefix String   @default("COT") // Prefijo para cotizaciones
  invoiceNotes    String?  // Notas por defecto en facturas
  quotationNotes  String?  // Notas por defecto en cotizaciones
  paymentTerms    String?  // Términos de pago por defecto
  emailFooter     String?  // Pie de email
  primaryColor    String   @default("#3b82f6") // Color principal
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
